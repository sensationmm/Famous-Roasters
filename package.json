{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "graphql": "^16.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "typescript": "^4.6.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --maxWorkers=50%",
    "test:watchAll": "react-scripts test --coverage --watchAll",
    "test:watch": "react-scripts test --coverage --runInBand",
    "test:ci": "react-scripts test --coverage --watchAll=false",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "prettier": "prettier --check src/**/*.{ts,tsx}",
    "prettier:write": "prettier --check src/**/*.{ts,tsx} --write",
    "postinstall": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-aws-s3 --out=.storybook-out"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,d.ts}": [
      "npm run prettier:write",
      "npm run lint:fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@shopify/hydrogen": "^0.13.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.19",
    "@storybook/storybook-deployer": "^2.8.11",
    "@storybook/testing-library": "^0.0.9",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "eslint": "^8.10.0",
    "eslint-plugin-react": "^7.29.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "graphql.macro": "^1.4.2",
    "husky": "^7.0.4",
    "i18next": "^21.6.14",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "react-hook-form": "^7.29.0",
    "react-i18next": "^11.16.1",
    "storybook-react-i18next": "^1.0.18",
    "tailwindcss": "^3.0.23",
    "webpack": "5"
  },
  "resolutions": {
    "glob-parent": "^5.1.2",
    "nth-check": "^2.0.1",
    "trim": "^0.0.3",
    "webpack": "^5",
    "workbox-webpack-plugin": "6.2.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/?!(@shopify/hydrogen)"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.tsx",
      "<rootDir>/.*.stories.tsx$",
      "<rootDir>/src/reportWebVitals.ts"
    ]
  }
}
